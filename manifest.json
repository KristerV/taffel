{
  "manifest_version": 3,
  "name": "Tahvel Auto-Fill",
  "version": "1.0",
  "description": "Automatically fill missing lesson dates in Tahvel journals",
  "browser_specific_settings": {
    "gecko": {
      "id": "tahvel-autofill@krister.ee",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://tahvel.edu.ee/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://tahvel.edu.ee/*"],
      "js": [
        "utils/common.js",
        "utils/button-injection.js",
        "features/fill-missing-lessons/constants.js",
        "features/fill-missing-lessons/api.js",
        "features/fill-missing-lessons/ui.js",
        "features/fill-missing-lessons/index.js",
        "features/mark-all-missing/api.js",
        "features/mark-all-missing/ui.js",
        "features/mark-all-missing/index.js",
        "features/mark-missing-tinkr/matcher.js",
        "features/mark-missing-tinkr/parser.js",
        "features/mark-missing-tinkr/api.js",
        "features/mark-missing-tinkr/ui.js",
        "features/mark-missing-tinkr/index.js",
        "features/navbar-buttons/ui.js",
        "features/navbar-buttons/index.js",
        "content.js"
      ],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon-48.png",
    "96": "icon.png",
    "128": "icon-128.png"
  }
}
